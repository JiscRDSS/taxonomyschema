{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Publication Resource Type",
  "description": "IRUS-UK vocabulary for publication resources.",
  "type": "object",
  "properties": {
    "id": {
      "description": "The unique identifier for the vocabulary",
      "default": 14,
      "type": "integer"
    },
    "vocabulary": {
      "description": "Publication types as set out byt the IRUS-UK vocabulary.",
      "type": "string",
      "enum": ["artOrDesignItem", "article", "audio", "book", "bookSection", "conferenceOrWorkshopItem", "examPaper", "image", "journal", "learningObject", "movingImage", "musicOrMuscalComposition", "other", "patent", "performance", "preprint", "report", "review", "showExhibition", "text", "thesisOrDissertation", "unknown", "website", "workingPaper" ]
    }
  },
  "required": ["id", "vocabulary"]
}
