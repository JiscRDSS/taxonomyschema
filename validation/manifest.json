{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Set of Taxonomy Schemas",
  "type": "array",
  "minItems": 1,
  "uniqueItems": true,
  "items": {
    "title": "Taxonomy",
    "description": "Taxonomy Schema Payload for Updating Service",
    "type": "object",
    "properties": {
      "id": {
        "description": "The unique identifier for the vocabulary",
        "type": "integer"
      },
      "vocabulary": {
        "description": "Types allowed in this vocabulary.",
        "type": "array",
        "items": {
          "type": "string"
        },
        "minItems": 1,
        "uniqueItems": true
      }
    },
    "required": ["id", "vocabulary"],
    "additionalItems": false
  }
}
